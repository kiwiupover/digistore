<h1>Welcome Home</h1>
<div class='row'>
  <div class='col-lg-2'>
    <h4>All Products</h4>
    <ul class='list-unstyled'>
      {{# each }}
        <li>
          {{# link-to "product" this }}
            <img {{ bind-attr src=avatar }} />
            {{ name }} <small> {{ format-money price }}</small>
          {{/ link-to }}
        </li>
      {{/ each }}
    </ul>
  </div>
  <div class='col-lg-10'>
    {{ outlet }}
  </div>
</div>
