<h1>Your Cart</h1>

<div class='row'>
  <div class='col-lg-8'>
    <ul class='list-unstyled'>
      {{# each items }}
        <li>
          {{# link-to "product" this }}
            <img {{ bind-attr src=image }} class='thumbnail col-lg-12' />
            {{ name }}
          {{/ link-to }}
        </li>
      {{/ each }}
    </ul>
  </div>
</div>
