<h1>
  {{ name }}
  <small class='muted'>(price: {{ format-money price }})</small>
</h1>

<div class='row'>
  <div class='col-lg-8'>
    <img {{ bind-attr src=image }} class='thumbnail col-lg-12' />
  </div>
  <div class='col-lg-4'>
    {{ description }}
  </div>
   <button {{ action "addToCart" this }}>Add to Cart</button>
</div>
